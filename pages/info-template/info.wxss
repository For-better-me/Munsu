.container{
  width: 100%;
  border-top: #ddd solid 1px;
}
.content{
  width: 90%;
  padding: 30rpx 0;
  margin:0 auto;
}
.poster{
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  vertical-align: top;
}
.text-content{
  width: 400rpx;
  vertical-align: top;
  display: inline-block;
  margin-left: 50rpx;
}
.title{
  font-size: 18px;
  font-weight: 600;
  color: #333;
  display: block;
  line-height: 50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.detail{
  font-size: 12px;
  color: #666;
  line-height: 43rpx;
  display: block;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 8rpx;
}
.like{
  display: flex;
  margin-top: 20rpx;
}
.collect{
  display: flex;
  justify-content: space-around;
  align-content:center;
  margin-right: 24rpx;

}
.icon{
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.num{
  font-size: 12px;
  color: #999;
  line-height: 24rpx;
}
