/* pages/center/center.wxss */
.bg{
  width: 100%;
  height: 100%;
  background: #eee;
  padding-top: 30rpx;
}

.person{
  width:100%;
  height:150rpx;
  background: #fff;
  padding: 30rpx 0;
  position: relative
}
.person-info{
  width: 90%;
  margin:0 auto;
  display: flex;
  align-items: center;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
}
.username{
  font-size: 15px;
  color: #666;
  margin-left: 30rpx;
}
.person-list{
  width: 100%;
  background: #fff;
  margin-top: 30rpx;
}
.list-item{
  width: 90%;
  margin:0 auto;
  border-bottom: #ddd solid 1px;
  display: flex;
  align-items: center;
  height: 85rpx;
}
.icon-tit{
  font-size: 14px;
  color: #333;
  margin-left: 25rpx;
}
.icon{
  width:44rpx;
  height:44rpx;
  margin-left: 16rpx;
}
.fr{
  float: right;
  margin-right: 30rpx;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 45rpx;
}