/* pages/center/apply/apply.wxss */
.apply-wrapper{
  width: 90%;
  margin:0 auto;
  margin-top: 100rpx;

}
.name{
  display: flex;
  align-items: center;
  width: 70%;
  margin:0 auto;
  margin-top: 60rpx;
  justify-content: space-between;
}
.name-txt{
  font-size: 16px;
  color: #333;
  width: 188rpx;
}
.name-input{
  border-bottom:#d1d1d1 solid 1px;
  font-size: 16px;
  flex-grow: 1;
}
radio-group{
  display: flex;
  width: 70%;
  margin:0 auto;
  margin-top: 60rpx;
}
.man{
  margin-right: 40rpx;
}
label{
  font-size: 16px;
  color: #333;
}
.tip{
  width: 70%;
  margin:0 auto;
  margin-top: 50rpx;
  font-size: 16px;
  color: #333;
}
textarea{
  display: block;
  width:100%;
  height: 200rpx;
  margin-top: 35rpx;
  border:#d1d1d1 solid 1px;
  border-radius: 4px;
  padding: 20rpx;
}
button{
  margin-top: 20px;
}
.btn{
  margin-top: 100rpx;
}
.notice{
  font-size: 12px;
  display: block;
  text-align: center;
  margin-top: 30rpx;
  color: #ff0000;
  padding-bottom: 10rpx;
}