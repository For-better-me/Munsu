/* pages/center/apply/apply.wxss */
.apply-wrapper{
  width: 94%;
  margin:0 auto;
  margin-top: 100rpx;

}
.name{
  display: flex;
  align-items: center;
  width: 70%;
  margin:0 auto;
  margin-top: 60rpx;
  justify-content: space-between;
}
.name-txt{
  font-size: 16px;
  color: #333;
  width: 188rpx;
}
.name-input{
  border-bottom:#d1d1d1 solid 1px;
  font-size: 16px;
  flex-grow: 1;
}
radio-group{
  display: flex;
  width: 70%;
  margin:0 auto;
  margin-top: 60rpx;
}
.man{
  margin-right: 40rpx;
}
label{
  font-size: 16px;
  color: #333;
}
.tip{
  width: 78%;
  margin:0 auto;
  margin-top: 50rpx;
  font-size: 16px;
  color: #333;
}
textarea{
  display: block;
  width:100%;
  height: 200rpx;
  margin-top: 35rpx;
  border:#d1d1d1 solid 1px;
  border-radius: 4px;
  padding: 20rpx;
}
button{
  margin-top: 20px;
}
.btn{
  margin-top: 50rpx;
}
.notice{
  font-size: 12px;
  display: block;
  text-align: center;
  margin-top: 30rpx;
  color: #f84d3c;
  padding-bottom: 30rpx;
}
.addPic{
  width: 150rpx;
  height: 150rpx;
  vertical-align: top;
}
.desPic{
  width: 150rpx;
  height: 150rpx;
  vertical-align: top;
  margin-bottom: 10rpx;
  margin-right: 15rpx;
}
.picList{
  margin-top:30rpx; 
  margin-left: 25rpx;
}
button{
  width: 560rpx;
  height: 80rpx;
  line-height:80rpx;
}
.placeholder{
  font-size: 12px;
  color: #999;
}
.laba{
  width: 100%;
  height: 70rpx;
  background:#f84d3c;
  display: flex;
  align-items: center;
 
}
.icon-laba{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  float: left;
}
.txt-laba{
  font-size: 12px;
  color: #fff;
  line-height: 70rpx;
  position: relative;
  flex-grow: 1;
  height: 70rpx;
  overflow: hidden;
}
.txt{
  position: absolute;
  line-height: 70rpx;
  animation: scroll 10s linear infinite;
}
@keyframes scroll{
  0%{
    left: 0;
  }
  100%{
    left:-100%;
  }
}